<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 为这个mapper指定一个唯一的namespace，namespace的值习惯上设置成包名+sql映射文件名，这样就能够保证namespace的值是唯一的
例如namespace="me.gacl.mapping.userMapper"就是me.gacl.mapping(包名)+userMapper(userMapper.xml文件去除后缀)
 -->
<mapper namespace="com.equipments.management.mapper.InspmethodMapper">

    <!-- 
        根据id查询得到一个user对象
     -->
    <resultMap id="inspmethodResultMap" type="com.equipments.management.domain.Inspmethod">
        <id property="inspmethodno" column="INSP_METHOD_NO"/>
        <result property="applino" column="APPLI_NO"/>

        <association property="dicinspmethodno" column="DICINSP_METHOD_NO"
                     select="com.equipments.management.mapper.DicinspmethodMapper.getDicinspmethodById"
                     javaType="com.equipments.management.domain.Dicinspmethod"/>
    </resultMap>

    <select id="getInspmethodById" parameterType="Integer"
            resultMap="inspmethodResultMap">
        select * from eq_insp_method where INSP_METHOD_NO=#{inspmethodno}
    </select>
    <select id="getInspmethodByNo" parameterType="Integer"
            resultMap="inspmethodResultMap">
        select * from eq_insp_method where APPLI_NO=#{applino}
    </select>
    <select id="getAllInspmethods" resultMap="inspmethodResultMap">
        select * from eq_insp_method
    </select>

    <select id="countById" resultType="java.lang.Integer" >
        select count(1) from eq_insp_method
    </select>
    <insert id="addInspmethod" parameterType="com.equipments.management.domain.Inspmethod"
            useGeneratedKeys="true" keyProperty="inspmethodno">
        insert into eq_insp_method(APPLI_NO,DICINSP_METHOD_NO)
        values(#{applino},#{dicinspmethodno.dicinspmethodno})
    </insert>
    <delete id="removeInspmethodById" parameterType="Integer">
        delete from eq_insp_method where INSP_METHOD_NO = #{inspmethodno}
    </delete>

    <select id="getInspmethodByAll" resultMap="inspmethodResultMap">
        select * from eq_insp_method
        <where>
            <if test="inspmethodno !=null">INSP_METHOD_NO=#{inspmethodno}</if>
            <if test="applino !=null">and APPLI_NO=#{applino}</if>
            <if test="dicinspmethodno !=null and dicinspmethodno.dicinspmethodno !=null">and DICINSP_METHOD_NO=#{dicinspmethodno.dicinspmethodno}</if>
        </where>
    </select>

    <update id="updateInspmethod">
        update eq_insp_method
        <trim prefix="set" suffixOverrides=",">
            <if test="applino !=null">APPLI_NO=#{applino},</if>
            <if test="dicinspmethodno !=null and dicinspmethodno.dicinspmethodno !=null">DICINSP_METHOD_NO=#{dicinspmethodno.dicinspmethodno},</if>
        </trim>
        where INSP_METHOD_NO=#{inspmethodno}
    </update>

    <!--新结构-->
    <resultMap id="inspmethodResult001Map" type="com.equipments.management.domain.gradation.Inspmethod001">
        <id property="inspmethodno" column="INSP_METHOD_NO"/>
        <result property="applino" column="APPLI_NO"/>

        <collection property="dicinspmethodList" column="DICINSP_METHOD_NO"
                     select="com.equipments.management.mapper.DicinspmethodMapper.getDicinspmethodById"
                     javaType="com.equipments.management.domain.Dicinspmethod"/>
    </resultMap>
</mapper>